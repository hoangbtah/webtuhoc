<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li>@Html.ActionLink("Danh sách hàng", "Index", "Hangs")</li>
                    <li>@Html.ActionLink("Danh sách nhà cung cấp", "Index", "Nha_CC")</li>
                    <li>@Html.ActionLink("Danh sách người dùng", "Index", "nguoidungs")</li>

                </ul>
                @if (Session["HoTen"] != null)
                {
                    <ul class="nav navbar-nav navbar-right">
                        <li><a>Xin chào ,@Session["HoTen"]-@Session["Email"]</a></li>
                        <li class="nav-item">
                            <a class="navbar-link" href="@Url.Action("Logout","Home")">
                                <span class="glyphicon glyphicon-log-out"></span>Đăng xuất
                            </a>
                        </li>
                </ul>
            }
            else
            {
                <ul class="nav navbar-nav navbar-right">
                    <li class="nav-item">
                        <a class="navbar-link" href="@Url.Action("Register","Home")">
                            <span class="glyphicon glyphicon-user"></span>Đăng ký
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="navbar-link" href="@Url.Action("Login","Home")">
                            <span class="glyphicon glyphicon-log-in"></span>Đăng nhập
                        </a>
                    </li>
                </ul>
            }

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
